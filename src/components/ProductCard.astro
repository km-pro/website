---
interface Props {
  title: string;
  description: string;
  href: string;
  image?: string;
}

const { title, description, href, image } = Astro.props;
---

<div class="group rounded-xl bg-white shadow-md transition-all hover:shadow-lg h-full">
  <div class="flex flex-row h-full">
    {image && (
        <div class="p-1 bg-gray-50 md:w-1/3 flex items-center justify-center">
          <img
              src={image}
              alt={title}
              class="max-h-40 min-w-20 w-auto object-contain"
          />
        </div>
    )}
    <div class="p-6 flex flex-col justify-between md:w-2/3">
      <div>
        <h3 class="mb-3 text-xl font-bold text-gray-900">
          <a href={href} class="hover:text-blue-600 transition-colors">
            {title}
          </a>
        </h3>
        <p class="text-gray-600 mb-4 line-clamp-6">
          {description}
        </p>
      </div>
      <div class="mt-2">
        <a href={href} class="inline-flex items-center text-blue-600 hover:text-blue-700 transition-colors">
          Подробнее
          <svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width={2} d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</div>
