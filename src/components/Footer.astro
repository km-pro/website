    { href: '/aboutcompany/about/', title: 'История' },
    { href: '/references/', title: 'Проекты' },
    { href: '/our_services/our_services1/', title: 'Наши услуги' },
    { href: '/sitemap/', title: 'Карта сайта' },
    { href: '/contact_us/', title: 'Контакты' },
  ],
  categories: [
    { href: '/products/pallet_handling/', title: 'Паллетные стеллажи' },
    { href: '/products/small_part_handling/', title: 'Полочные стеллажи' },
    {
