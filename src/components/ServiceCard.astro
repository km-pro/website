---
import type { ImageMetadata } from 'astro';

export interface Props {
  title: string;
  href: string;
  description: string;
}

const { title, href, description } = Astro.props;
---

<div
  class="bg-white rounded-lg shadow-md p-6 flex flex-col h-full relative overflow-hidden group hover:shadow-lg transition-shadow"
>
  <h2 class="text-xl font-bold mb-4 z-10">
    <a href={href} class="text-gray-900 hover:text-blue-800 transition-colors underline">
      {title}
    </a>
  </h2>

  <div class="text-gray-600 relative z-10">
    <p>{description}</p>
  </div>
</div>
