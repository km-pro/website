---
import { Image } from 'astro:assets';
import SideNavigation from '../components/SideNavigation.astro';
import banner from '../assets/images/handshake.png';

const sideNavItems = [
  { title: 'Наши услуги', href: '/our_services/our_services1/' },
  {
    title: 'Анализ существующей ситуации',
    href: '/our_services/analiz_suschestvujuschej_situacii/',
  },
  { title: 'Предложение', href: '/our_services/predlozhenie/' },
  { title: 'Продукт/Система', href: '/our_services/produkt_sistema/' },
  { title: 'Расчеты', href: '/our_services/rascheti/' },
  {
    title: 'Доставка и установка',
    href: '/our_services/dostavka_i_ustanovka/',
  },
  {
    title: 'Сопровождение проекта',
    href: '/our_services/soprovozhdenie_proekta/',
