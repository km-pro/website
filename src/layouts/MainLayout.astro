---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Analytics from '../components/Analytics.astro';
import SEO, { type CustomMeta } from '../components/SEO.astro';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  ogTitle?: string;
  ogDescription?: string;
  ogImage?: string;
  ogType?: string;
  ogSiteName?: string;
  ogUrl?: string;
  ogLocality?: string;
  canonicalUrl?: string;
  customMetas?: CustomMeta[];
}

const {
  title,
  description,
  ogTitle,
  ogDescription,
  ogImage,
  ogType,
  ogSiteName,
  ogUrl,
  ogLocality,
  customMetas,
} = Astro.props;
---

<!doctype html>
<html lang="ru" class="scrollbar-thin scrollbar-thumb-gray-400 scrollbar-track-transparent">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#ffffff" />

    <SEO
      title={title}
      description={description}
      ogTitle={ogTitle}
      ogDescription={ogDescription}
      ogImage={ogImage}
      ogType={ogType}
      ogSiteName={ogSiteName}
      ogUrl={ogUrl}
      ogLocality={ogLocality}
      customMetas={customMetas}
    />

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="shortcut icon" href="/favicon.ico" />

    <link rel="manifest" href="/site.webmanifest" />

    <Analytics />
  </head>
  <body>
    <div class="mx-auto max-w-7xl">
      <Header />

      <main class="mt-4 mx-2">
        <slot />
      </main>
    </div>

    <Footer />
  </body>
</html>
