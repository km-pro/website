---
import Layout from '../layouts/MainLayout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import SitemapList from '../components/SitemapList.astro';
import sitemapJson from '../assets/sitemap.json';

const breadcrumbItems = [{ title: 'Главная', href: '/' }, { title: 'Карта сайта' }];
---

<Layout title="Карта сайта - ЗАО «КМ-Про»">
  <Breadcrumbs items={breadcrumbItems} />

  <div class="max-w-4xl mx-auto py-8">
    <div class="bg-white rounded-lg shadow-md p-8">
      <h1 class="text-2xl font-bold mb-6">Карта сайта</h1>

      <div class="prose max-w-none">
        <SitemapList items={sitemapJson} />
      </div>
    </div>
  </div>
</Layout>
