---
import ProjectCard from '../../../../components/ProjectCard.astro';
import Breadcrumbs from '../../../../components/Breadcrumbs.astro';
import Layout from '../../../../layouts/MainLayout.astro';

interface Project {
  title: string;
  description: string;
  image: string;
  href: string;
}

const breadcrumbItems = [
  { title: 'Главная', href: '/' },
  { title: 'Проекты', href: '/references/' },
  { title: 'Хранение на полках', href: '/references/storage_of_small_parts/' },
  { title: 'Проекты с применением горизонтальных каруселей (HOCA)' },
];

const projects: Project[] = [
  {
    title: 'Больничная аптека в г. Дрезден, Германия',
    description:
      'Четыре системы, оснащенные Constructor WMS и соединенные с центральным сервером учреждения, позволяют производить отбор 15 заказов одним оператором единовременно.',
    image: 'https://stellazhi.by/uploads/content/image/size0/stelazh122.png',
    href: '/references/storage_of_small_parts/proekti_s_primeneniem_gorizontal_nih_kar/bol_nichnaja_apteka_v_g_drezden_germanij/',
  },
  {
    title: 'Грое АГ, Германия',
    description:
      'Три горизонтальные системы Constructor (HOCA) позволили оператору одновременно отбирать до восьми заказов.',
    image: 'https://stellazhi.by/uploads/content/image/size0/stelazh132.png',
    href: '/references/storage_of_small_parts/proekti_s_primeneniem_gorizontal_nih_kar/groe_ag_germanija/',
  },
];
---

<Layout title="Реализованные проекты с применением горизонтальных каруселей (HOCA)">
  <Breadcrumbs items={breadcrumbItems} />

  <div class="max-w-6xl mx-auto px-4 py-8">
    <h1 class="text-white bg-gray-600 px-6 py-3 text-lg rounded-lg shadow mb-8">
      Реализованные проекты с применением горизонтальных каруселей (HOCA)
    </h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        projects.map((project) => (
          <ProjectCard
            href={project.href}
            title={project.title}
            description={project.description}
            image={project.image}
          />
        ))
      }
    </div>
  </div>
</Layout>
