---
import ProjectCard from '../../../components/ProjectCard.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import Layout from '../../../layouts/MainLayout.astro';

interface Project {
  title: string;
  description: string;
  image?: string;
  href: string;
}

const breadcrumbItems = [
  { title: 'Главная', href: '/' },
  { title: 'Проекты', href: '/references/' },
  { title: 'Проекты с применением мезонинных систем' },
];

const projects: Project[] = [
  {
    title: 'Ван Дер Гааг БиВи, Нидерланды',
    description: 'Мезонинная система решила проблему, связанную с переездом в помещение меньшей площади.',
    image: '/images/pallet_111.webp',
    href: '/references/workplace_storage/van_der_gaag_bivi_niderlandi/',
  },
];
---

<Layout title="Реализованные проекты с применением мезонинных систем">
  <Breadcrumbs items={breadcrumbItems} />

  <div class="max-w-[2400px] mx-auto px-4 py-8">
    <h1 class="text-white bg-gray-600 px-6 py-3 text-lg rounded-lg shadow mb-8">
      Реализованные проекты с применением мезонинных систем
    </h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        projects.map((project) => (
          <ProjectCard
            href={project.href}
            title={project.title}
            description={project.description}
            image={project.image}
          />
        ))
      }
    </div>
  </div>
</Layout>
