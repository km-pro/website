---
import Layout from '../../../../layouts/MainLayout.astro';
import Breadcrumbs from '../../../../components/Breadcrumbs.astro';

const breadcrumbItems = [
    { title: 'Главная', href: '/' },
    { title: 'Продукция', href: '/products/' },
    {
        title: 'Автоматизированные складские системы',
        href: '/products/skladskie_sistemi_dinamicheskogo_hraneni/',
    },
    {
        title: 'Складское оборудование (вертикальные карусели paternoster)',
        href: '/products/skladskie_sistemi_dinamicheskogo_hraneni/vertikal_nie_karuseli_paternoster/'
    },
    { title: 'Аксессуары' },
];

const accessories = [
    {
        title: 'Дисплей одновременного отбора заказов',
        image: 'https://stellazhi.by/uploads/goods/image/size0/batch_picking1.png',
        description: 'Устанавливается на фронтальную панель складского автомата.'
    },
    {
        title: 'Техническое окно',
        image: 'https://stellazhi.by/uploads/goods/image/size0/cladding_window1.png',
        description: 'Предоставляет возможность визуального контроля за машиной в работе.'
    },
    {
        title: 'Электрическая дверь',
        image: 'https://stellazhi.by/uploads/goods/image/size0/electrical_door1.png',
        description: 'Предотвращает несанкционированный доступ к грузам, расположенным внутри автомата. Может быть интегрирована с системой пожаротушения.'
    },
    {
        title: 'Intermediate Shelf/Sublevel',
        image: 'https://stellazhi.by/uploads/goods/image/size0/intermediate_shelves_dividers.png',
        description: 'All Paternoster carriers can be equipped with sub-levels.'
    },
    {
        title: 'Разделитель',
        image: 'https://stellazhi.by/uploads/goods/image/size0/divider1.png',
        description: 'В случае необходимости полки складских машин комплектуются разделителями.'
    },
    {
        title: 'Дисплей - указатель',
        image: 'https://stellazhi.by/uploads/goods/image/size0/position_indication_list1.png',
        description: 'Осуществляет пошаговый контроль отбора заказа.'
    },
    {
        title: 'Дополнительные зоны выгрузки',
        image: 'https://stellazhi.by/uploads/goods/image/size0/openings21.png',
        description: 'Устанавливаются на одной/противоположной стороне, в одном/разных уровнях.'
    },
    {
        title: 'Беспроводные сканеры штрихкодов',
        image: 'https://stellazhi.by/uploads/goods/image/size0/bar_code_reader1.png',
        description: 'Используются для оптимизации отбора.'
    },
    {
        title: 'Система WMS TC2000',
        image: 'https://stellazhi.by/uploads/goods/image/size0/tc2000.png',
        description: 'TC2000 – система WMS разработанная для атоматизированного хранения. Поставляется для всех складских машин Constructor.'
    }
];
---

<Layout title="Аксессуары для вертикальных каруселей PATERNOSTER | КМ-про">
    <div class="max-w-6xl mx-auto px-4">
        <Breadcrumbs items={breadcrumbItems} />

        <div class="bg-white rounded-lg shadow-md p-8 my-8">
            <h1 class="text-3xl font-bold mb-6">Вертикальные карусели (PATERNOSTER) - Аксессуары</h1>

            <div id="OverviewGrid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-8">
                {accessories.map(accessory => (
                        <div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-200">
                            <h2 class="text-xl font-semibold p-4 bg-gray-50">{accessory.title}</h2>
                            <div class="flex justify-center p-4">
                                <img src={accessory.image} alt={accessory.title} class="rounded-lg overflow-hidden w-full max-h-48 object-contain" />
                            </div>
                            <div class="p-4 bg-gray-50">
                                <p>{accessory.description}</p>
                            </div>
                        </div>
                ))}
            </div>
        </div>
    </div>
</Layout>
